{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "dom.iterable"
    ]
  },
  "include": [
    "./*.ts",
    "./src/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
